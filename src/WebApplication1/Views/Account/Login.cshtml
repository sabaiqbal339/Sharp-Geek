@model AspNetCoreExample.Models.AccountViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<br />

<div class="col-md-6">
    <form class="form-horizontal" id="loginform" asp-controller="Account" asp-action="Login">
        <div class="form-group">
            <label for="inputEmail" class="col-lg-4 control-label">Email</label>
            <div class="col-lg-8">
                <input type="email" id="email" data-validation-number-message="This is required" class="form-control" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-4 control-label">Password</label>
            <div class="col-lg-8">
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4"></div>
            <div class="col-lg-8">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="rememberme" asp-for="RememberMe"> Remember Me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-4">
                <button type="submit" class="btn btn-primary">Login</button>
                <button type="reset" class="btn btn-default">Reset</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4"></div>
            <div class="col-lg-8">
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
            </div>
        </div>
    </form>
    <br />
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
